{
  "name": "@turbo-with-tailwind-v4/design-system",
  "version": "0.0.0",
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "src"
  ],
  "exports": {
    "./components/*": "./src/components/*.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./lib/*": "./src/lib/*.ts",
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./theme.css": "./src/theme.css",
    "./styles.css": "./dist/styles.css",
    "./button": {
      "types": "./src/components/ui/button.tsx",
      "import": "./src/components/ui/button.tsx"
    },
    "./input": {
      "types": "./src/components/ui/input.tsx",
      "import": "./src/components/ui/input.tsx"
    },
    "./card": {
      "types": "./src/components/ui/card.tsx",
      "import": "./src/components/ui/card.tsx"
    },
    "./tabs": {
      "types": "./src/components/ui/tabs.tsx",
      "import": "./src/components/ui/tabs.tsx"
    },
    "./label": {
      "types": "./src/components/ui/label.tsx",
      "import": "./src/components/ui/label.tsx"
    },
    "./sign-in": {
      "types": "./src/components/sign-in.tsx",
      "import": "./src/components/sign-in.tsx"
    }
  },
  "scripts": {
    "build": "tsc --declaration --emitDeclarationOnly false && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "lint": "eslint src/",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@radix-ui/react-slot": "^1.2.0",
    "@turbo-with-tailwind-v4/eslint-config": "workspace:*",
    "@turbo-with-tailwind-v4/typescript-config": "workspace:*",
    "@types/react": "^19.0.10",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.4",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toggle": "^1.1.9",
    "@tailwindcss/cli": "^4.0.12",
    "@tailwindcss/postcss": "^4.0.12",
    "@turbo-with-tailwind-v4/utils": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.503.0",
    "postcss": "^8.5.3",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.1.10"
  }
}
