{
    "extends": "@turbo-with-tailwind-v4/typescript-config/base.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": false,
      "noEmit": false,
      "lib": ["ES2022"],
      "target": "ES2022",
      "module": "ESNext"
    },
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
  }