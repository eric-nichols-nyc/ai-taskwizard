{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "moduleResolution": "nodenext",
      "baseUrl": ".",
      "paths": {
        "@turbo-with-tailwind-v4/supabase": ["../../packages/supabase/src"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
